{
    "manifest_version": 2,
    "name": "RYM Last.fm Stats",
    "version": "1.0",
    "description": "Display Last.fm stats on RYM pages",
    "permissions": [
        "activeTab",
        "downloads",
        "storage",
        "https://rateyourmusic.com/release/*",
        "http://ws.audioscrobbler.com/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://rateyourmusic.com/release/*"],
            "js": ["content_release.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://rateyourmusic.com/artist/*"],
            "js": ["content_artist.js"],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "applications": {
        "gecko": {
            "id": "rymlastfmstats@rateyourmusic.com",
            "strict_min_version": "58.0"
        }
    }
}
