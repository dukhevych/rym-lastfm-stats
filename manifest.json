{
    "manifest_version": 2,
    "name": "RYM Data Extractor",
    "version": "1.0",
    "description": "Extract artist names, release titles, and genres from Rate Your Music page.",
    "permissions": [
        "activeTab",
        "downloads",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://rateyourmusic.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "applications": {
        "gecko": {
            "id": "landenmetal@gmail.com",
            "strict_min_version": "42.0"
        }
    }
}
